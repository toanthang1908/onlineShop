@model onlineShop.Models.EF.KhachHang

@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h5 style="text-align:center">ĐĂNG KÝ TÀI KHOẢN</h5>
<h6 style="text-align:center">@ViewBag.ThongBao</h6>
<hr />
<div style="margin-left: 400px">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">         
           
            @Html.ValidationSummary(true)
            
            <div class="form-group">
                @Html.LabelFor(model => model.HoTenK, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HoTenK)
                    @Html.ValidationMessageFor(model => model.HoTenK)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NgaySinhK, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="date" name="NgaySinhK" />
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.GioiTinhK, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("GioiTinhK", new SelectList(new[] { "Nam", "Nữ" }))
                    @Html.ValidationMessageFor(model => model.GioiTinhK)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DiaChiK, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                   
                    @Html.EditorFor(model => model.DiaChiK)
                    @Html.ValidationMessageFor(model => model.DiaChiK)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.EmailK, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.EmailK)
                    @Html.ValidationMessageFor(model => model.EmailK)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SDTK, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SDTK)
                    @Html.ValidationMessageFor(model => model.SDTK)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TenTKK, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenTKK)
                    @Html.ValidationMessageFor(model => model.TenTKK)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PassK, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Password("PassK", "val")
                    @Html.ValidationMessageFor(model => model.PassK)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Đăng ký" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

</div>