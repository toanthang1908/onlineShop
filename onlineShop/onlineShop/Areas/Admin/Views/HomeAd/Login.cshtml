@model onlineShop.Models.EF.NhanVien

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Login for Admin</title>
    <link rel="stylesheet" href="/assets/admin/css/styleAD.css">

</head>

<body>

    <div class="wrapper">
        <div class="container">
            <h1>Welcome</h1>

            @using (Html.BeginForm("Login", "HomeAd", FormMethod.Post))
            {
                @Html.ValidationSummary(false, "", "error");
                @Html.TextBoxFor(model => model.TenTK, new { @placeholder = "Username" })
                @Html.TextBoxFor(model => model.Pass, new { @type = "password", @placeholder = "Password" })
                <button type="submit" id="login-button" name="Login">Login</button>
            }
        </div>

        <ul class="bg-bubbles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>




</body>
</html>


