@model onlineShop.Models.EF.PhanLoai

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdLayout.cshtml";
}

<h2>CHỈNH SỬA</h2>

@using (Html.BeginForm("Edit", "PhanLoai", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>PhanLoai</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MaPL)

        <div class="form-group">

            <h4 class="control-label col-md-2">Tên Phân Loại</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenPL)
